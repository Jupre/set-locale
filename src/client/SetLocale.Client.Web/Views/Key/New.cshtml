@model SetLocale.Client.Web.Models.NewKeyModel

@{
    ViewBag.Title = ViewBag.Txt["NewKey"];
}


<div class="row col-lg-5">
    <h3>@ViewBag.Title</h3>
    <hr />

    <form action="/app/new" method="post">


        <div class="row">
            <strong>@ViewBag.Txt["Key"]</strong>
            <input type="text" class="form-control input-lg" name="key" id="key" value="@Model.Key" />
        </div>
         
        <div class="row">
            <strong>@ViewBag.Txt["Tag"]</strong>
            <input type="text" class="form-control input-lg" name="tag" id="tag" value="@foreach (var item in Model.Tag){ @item.ToString()}" />
        </div>

        <div class="row">
            <strong>@ViewBag.Txt["Description"]</strong>
            <input type="text" class="form-control input-lg" name="description" id="description" value="@Model.Description" />
        </div>

        @Html.AntiForgeryToken()

        <div class="row">
            <input type="submit" value="@ViewBag.Txt["Save"]" class="btn btn-primary btn-lg" />
        </div>

        <div class="error">
            @Model.Msg
        </div>
    </form>
</div>


@section script
{
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $("form").validate({
                rules: {
                    appName: {
                        required: true,
                    },
                    url: {
                        required: true,
                    },
                    description: {
                        required: true,
                    }
                },
                messages: {
                    appName: {
                        required: "*"
                    },
                    url: "*",
                    description: "*"
                }
            });
        });
    </script>
}