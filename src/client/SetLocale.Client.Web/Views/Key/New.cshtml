@using SetLocale.Client.Web.Helpers
@model SetLocale.Client.Web.Models.KeyModel

@{
    ViewBag.Title = Html.LocalizationString("menu_words_new_word_new_key");
}


<div class="row col-lg-5">
    <h3>@ViewBag.Title</h3>
    <hr />

    <form action="/key/new" method="post">


        <div class="row">
            <strong>@Html.LocalizationString("menu_words_new_word_key")</strong>
            <input type="text" class="form-control input-lg" name="key" id="key" value="@Model.Key" />
        </div>

        <div class="row">
            <strong>@Html.LocalizationString("menu_words_new_word_tag")</strong>
            <input type="text" class="form-control input-lg" name="tag" id="tag" value="@foreach (var item in Model.Tags){ @Html.Raw(string.Format("{0},",item)) }"  />
        </div>

        <div class="row">
            <strong>@Html.LocalizationString("menu_words_new_word_description")</strong>
            <input type="text" class="form-control input-lg" name="description" id="description" value="@Model.Description" />
        </div>

        @Html.AntiForgeryToken()

        <div class="row">
            <input type="submit" value="@Html.LocalizationString("btn_menu_words_new_word_save")" class="btn btn-primary btn-lg" />
        </div>

        <div class="error">
            @Model.Msg
        </div>
    </form>
</div>


@section script
{
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js" type="text/javascript"></script>
    <script>
        $(function () {
            $("form").validate({
                rules: {
                    appName: { required: true },
                    url: { required: true }
                },
                messages: {
                    appName: "*",
                    url: "*"
                }
            });
        });
    </script>
}